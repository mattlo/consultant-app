{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    // disable requiring trailing commas because it might be nice to revert to
    // being JSON at some point, and I don't want to make big changes now.
    "comma-dangle": 0,
    "object-curly-spacing": [
      2,
      "never"
    ]
  },
  "env": {
    "mocha": true
  }
}